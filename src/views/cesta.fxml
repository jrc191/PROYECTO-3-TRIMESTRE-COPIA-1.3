<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="650" prefWidth="800" style="-fx-background-color: linear-gradient(to bottom, #0F1C3F, #1A2A5A);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CestaController">
    <VBox prefHeight="650.0" prefWidth="730.0" spacing="20">
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label prefHeight="40.0" prefWidth="241.0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;" styleClass="align" text="Cesta" textAlignment="CENTER" textFill="WHITE">
                <HBox.margin>
                    <Insets left="20.0" top="10.0" />
                </HBox.margin>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Label fx:id="usuarioLabel" style="-fx-font-weight: bold; -fx-text-fill: white;">
                    <HBox.margin>
                        <Insets top="10.0" />
                    </HBox.margin></Label>
                <Button onAction="#cerrarSesion" style="-fx-background-color: #ff4444; -fx-text-fill: white; -fx-font-weight: bold;" text="Cerrar sesión">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    <HBox.margin>
                        <Insets right="10.0" top="10.0" />
                    </HBox.margin>
                </Button>
            </HBox>
        </HBox>
        <HBox alignment="CENTER_LEFT" prefHeight="56.0" prefWidth="762.0" spacing="10" style="-fx-background-color: #1c2242; -fx-padding: 15; -fx-background-radius: 10;">
            <VBox.margin>
                <Insets left="15.0" right="15.0" />
            </VBox.margin>
            <Label prefHeight="18.0" prefWidth="116.0" style="-fx-text-fill: white;" text="Filtrar por fecha:" />
            <DatePicker fx:id="filtroFechaField" accessibleText="FILTRO FECHAS" prefHeight="26.0" prefWidth="134.0" />
            <Button onAction="#filtrarPorFecha" prefHeight="26.0" prefWidth="73.0" style="-fx-background-color: #4e3a74; -fx-text-fill: white; -fx-font-weight: bold;" text="Filtrar">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
            <Button onAction="#mostrarTodas" prefHeight="26.0" prefWidth="118.0" style="-fx-background-color: #4e3a74; -fx-text-fill: white; -fx-font-weight: bold;" text="Mostrar todas">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
            <Label prefHeight="18.0" prefWidth="59.0" style="-fx-text-fill: white;" text="Buscar:">
                <HBox.margin>
                    <Insets left="20.0" />
                </HBox.margin>
            </Label>
            <TextField fx:id="filtroNombreField" prefHeight="26.0" prefWidth="107.0" promptText="Nombre..." />
            <Button onAction="#filtrarPorNombre" prefHeight="26.0" prefWidth="81.0" style="-fx-background-color: #4e3a74; -fx-text-fill: white; -fx-font-weight: bold;" text="Buscar">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
        </HBox>
        <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="80.0" prefHeight="454.0" prefWidth="710.0" spacing="10" style="-fx-background-color: #1c2242; -fx-padding: 15; -fx-background-radius: 10;">
            <VBox.margin>
                <Insets left="15.0" right="15.0" />
            </VBox.margin>
            <ScrollPane fitToWidth="true" style="-fx-background: #1c2242; -fx-background-color: #1c2242;">
                <VBox fx:id="contenedorEntradas" spacing="10" style="-fx-background-color: #1c2242;">
                    <!-- Aquí se añadirán dinámicamente las entradas -->
                </VBox>
            </ScrollPane>
        </HBox>

        <!-- Total y botón de compra -->
        <HBox alignment="CENTER_RIGHT" style="-fx-background-color: #1c2242; -fx-padding: 15; -fx-background-radius: 10;">
            <VBox.margin>
                <Insets bottom="15.0" left="15.0" right="15.0" />
            </VBox.margin>
            <Label fx:id="totalLabel" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;" text="Total: 0.00 €">
                <HBox.margin>
                    <Insets right="20.0" />
                </HBox.margin>
            </Label>
            <Button style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Confirmar compra">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
        </HBox>

        <!-- BOTON VOLVER
        <Button onAction="#volverReservas" style="-fx-background-color: #1c2242; -fx-text-fill: white; -fx-font-weight: bold;" text="&lt;- Volver">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
            <HBox.margin>
                <Insets right="10.0" top="10.0" />
            </HBox.margin>
         <VBox.margin>
            <Insets bottom="15.0" left="15.0" />
         </VBox.margin>
        </Button>
        -->
    </VBox>

    <!-- Plantilla para cada entrada en la cesta (oculta, se usará como plantilla) -->
    <VBox fx:id="plantillaEntrada" style="-fx-background-color: #2a325c; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 5, 0, 0, 3);" visible="false">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <VBox spacing="5">
                <Label fx:id="nombreEspectaculo" style="-fx-font-weight: bold; -fx-text-fill: white; -fx-font-size: 14px;" />
                <Label fx:id="detalleButaca" style="-fx-text-fill: #e0e0e0; -fx-font-size: 12px;" />
                <Label fx:id="precioEntrada" style="-fx-text-fill: #e0e0e0; -fx-font-size: 12px;" />
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="eliminarBtn" style="-fx-background-color: #ff4444; -fx-text-fill: white; -fx-font-weight: bold;" text="Eliminar">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
        </HBox>
    </VBox>
</AnchorPane>
